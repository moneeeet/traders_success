<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
    <h3 class="mt-4"><strong>ユーザーを通報する</strong></h3><br>
      <%= form_with model: @report, url: public_user_reports_path do |f| %>
        <div class="form-group">
          通報理由
          <%= f.text_area :reason, rows:'3', class:"form-control" %>
          通報したい人のURL
          <%= f.text_field :url, class:"form-control" %>
          <%= f.submit "通報する", class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>