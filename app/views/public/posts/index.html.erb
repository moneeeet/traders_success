<div class="container">
  <div class="row mt-3 mb-3">
    <h1><strong>Posts</strong></h1>
  </div>

    <%= form_with url: public_posts_path, method: :get do |f| %>
      <%= f.collection_select :name, Tag.all, :name, :name, include_blank: "選択して下さい" %>
      <%= submit_tag '検索' %>
    <% end %>
    </br>
     <div class="row">
      <% @posts.each do |post| %>
        <div class="col-4">
          <div class="card mb-4">
            <%= link_to public_post_path(post), class:"card-body"  do %>
              <%= image_tag post.get_image(250,250), class:"card-img-top" %>
            <%end %>
            <strong class="ml-4 mb-2"><%= post.title %></strong>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-12 d-flex justify-content-center  mt-5 ">
        <p><%= paginate @posts, theme: 'bootstrap-5'%></p>
      </div>
    </div>
  </div>
