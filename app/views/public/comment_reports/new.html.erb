<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
    <h3 class="mt-4"><strong>コメントを通報する</strong></h3><br>
      <%= form_with model: @comment_report, url: public_post_post_comment_comment_reports_path, method: :post do |f| %>
        <div class="form-group">
          <strong>通報理由</strong></br>
            <div><%= f.text_area :reason, rows:'3', class:"form-control" %></div></br>
          <strong>通報したい人のURL等</strong>
            <div><%= f.text_field :url, class:"form-control" %></div></br>

          <div><%= f.submit "通報する", class: "btn btn-danger" %></div>
        </div>
<% end %>