<table>
  <tbody>
    <% post_comments.each do |post_comment| %>
    <tr>
      <td class= "comment-image">
        <%= image_tag post_comment.user.get_profile_image(100,100) %>
          <%= link_to public_user_path(post_comment.user.id) do %>
          <%= post_comment.user.name %>
        <% end %>
      </td>
      <td><%= post_comment.comment %></td>
      <td>
        <% if post_comment.user == current_user %>
          <%= link_to public_post_post_comment_path(post_comment.post.id, post_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger destroy_book_#{post_comment.id}" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </td>
      <td></td>
      <td>
        <% if post_comment.user != current_user %>
          <%= link_to "通報", new_public_post_post_comment_comment_report_path(post_id: post.id, post_comment_id: post_comment.id), class: "btn btn-outline-danger" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

