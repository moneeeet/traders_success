<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
      <h3 class="mt-4"><strong>会員情報編集</strong></h3>

      <%= form_with model: @user, url: public_user_path, method: :patch do |f| %>

      <div class="mb-3">
        <%= f.label :profile_image, "image" %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
       <div class="col">
        <%= f.label :name, "user name" %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class:"form-control", autocomplete: "email" %>
      </div>
      <div class="mb-3">
        <%= f.submit "編集内容を保存", class:"btn btn-success btn-block" %>
      </div>
      <div class="mb-3">
        <%= link_to "退会する", public_unsubscribe_path, class:"btn btn-outline-danger btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>