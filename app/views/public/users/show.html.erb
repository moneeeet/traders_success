<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>

     <h2 class="mt-3">New post</h2>
      <%= render 'public/posts/form', post: @post %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>posts</h2>
      <div class="row">

      <% @posts.each do |post| %>
        <div class="col-4">
          <div class="card">
            <%= link_to public_post_path(post), class:"card-body"  do %>
              <%= image_tag post.get_image(250,250), class:"card-img-top" %>
            <%end %>
            <%= post.title %>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
