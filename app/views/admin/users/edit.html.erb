<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
    <h3 class="mt-4"><strong>会員情報編集</strong></h3><br>
     <%= form_with model:@user, url: admin_is_deleted_path(@user), method: :patch do |f| %>
      <div class="custom-control custom-radio">
        <%= f.label :user_status, '会員ステータス' %>
        <%= f.radio_button :is_deleted, false %> <%= f.label :有効 %>
        <%= f.radio_button :is_deleted, true %> <%= f.label :退会 %>
      </div>
      </br>
      <%= f.submit "ステータスを更新" %>
      <% end %>
   </div>
  </div>
</div>