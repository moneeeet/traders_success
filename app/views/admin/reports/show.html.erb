<div class='container'>
  <div class=“row”>
    <div class='mx-auto col-lg-6'>
    <h3 class="mt-4"><strong>ユーザー通報詳細</strong></h3><br>
      <table class="table">
          <tbody>
            <tr>
              <td>通報ID</td>
              <td><%= @report.id %></td>
            </tr>
            <tr>
              <td>会員名</td>
              <td><%= link_to @report.reported.name, edit_admin_user_path(@report.reported.id) %></td>
            </tr>
            <tr>
              <td>理由</td>
              <td><%= @report.reason %></td>
            </tr>
            <tr>
              <td>URL等</td>
              <td><%= @report.url %></td>
            </tr>
            <tr>
              <td>通報者</td>
              <td><%= @report.reporter.name %></td>
            </tr>
            <tr>
              <td>対応ステータス</td>
              <td>
                <%= @report.status_i18n %>
                <%= form_with model:@report, url:admin_report_path(@report), method: :patch, local: true do |f| %>
                  <%= f.select :status, Report.statuses.keys.map { |k| [t("enums.report.status.#{k}"), k] } %>
                  <%= f.submit '更新' %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>